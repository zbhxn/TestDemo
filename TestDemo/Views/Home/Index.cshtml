@using System.Data

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Windows Azure Test</title>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script>
        var name=$("#txt1").val();
        var password=$("#txt2").val();
        $(function () {
            $.post("/Home/InsertData", {name:name,password:password},function(){
                alert("添加成功");
            });
        })
    </script>
</head>
<body>
    <div>
        <input type="text" id="txt1" placeholder="请输入用户名" />   <br />
        <input type="text" id="txt2" placeholder="请输入密码" />     <br />
        <input type="button" id="btn" value="添加" />

        @ViewData["DataMsg"]   &nbsp;&nbsp;&nbsp;
        @ViewBag.DataMsg
        <hr />
        @ViewData["BagMsg"]   &nbsp;&nbsp;&nbsp;
        @ViewBag.BagMsg
        <hr />
        <table border="1" style="border-collapse:collapse">
            <thead>
                <tr>
                    <th>用户名</th>
                    <th>密码</th>
                </tr>
            </thead>
            <tbody>
                @{
                    DataTable dt = (DataTable)ViewData["dt"];
                    for (int i = 0; i < dt.Rows.Count; i++)
                    {
                        <tr>
                            <td>@dt.Rows[i]["UserName"]</td>
                            <td>@dt.Rows[i]["PassWord"]</td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</body>
</html>
